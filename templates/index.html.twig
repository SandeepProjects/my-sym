{% extends 'base.html.twig' %}

{% block title %}Movie Details{% endblock %}

{% block stylesheets %}
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #6B73FF 0%, #000DFF 100%);
        margin: 0;
        padding: 0;
        color: #f8f9fa;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    .container {
        max-width: 900px;
        margin: 60px auto 40px;
        background: #ffffffdd;
        padding: 40px 50px;
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.3);
        color: #212529;
        flex-grow: 1;
    }
    header {
        border-bottom: 3px solid #0d6efd;
        margin-bottom: 30px;
        padding-bottom: 15px;
    }
    header h1 {
        margin: 0;
        font-size: 3rem;
        color: #0d6efd;
        font-weight: 700;
    }
    main {
        font-size: 1.3rem;
        line-height: 1.8;
    }
    .message {
        padding: 25px;
        background-color: #f8d7da;
        color: #842029;
        border-radius: 12px;
        border: 1px solid #f5c2c7;
        text-align: center;
        font-weight: 600;
        font-size: 1.2rem;
    }
    footer {
        background-color: #0d6efd;
        color: white;
        text-align: center;
        padding: 15px 0;
        font-size: 1rem;
        font-weight: 500;
        box-shadow: 0 -3px 10px rgba(0,0,0,0.2);
    }
</style>
{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold" href="#">MovieApp</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Movies</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container mt-5 pt-5">
    <header>
        {% if title %}
            <h1>{{ title }} is a Movie</h1>
        {% else %}
            <h1>Movie not found</h1>
        {% endif %}
    </header>
    <main>
        {% if title %}
            <p>Welcome to the details page for <strong>{{ title }}</strong>. Here you can add more information about the movie, such as description, release date, cast, and more.</p>
        {% else %}
            <div class="message">Sorry, we could not find the movie you are looking for.</div>
        {% endif %}
    </main>
</div>

<footer>
    &copy; {{ "now"|date("Y") }} MovieApp. All rights reserved.
</footer>
{% endblock %}
